{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./src/",
        "target": "ESNext",
        "strict": true,
        "noImplicitAny": true,
        "declaration": true,
        "composite": true,
        "moduleResolution": "Node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false
    },
    "files": [
        "src/index.ts"
    ],
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "test"
    ]
}